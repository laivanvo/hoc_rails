        <%= image_tag('video-svgrepo-com.svg') %>
        Video trực tiếp
      </div>
    </div>
    <div class="item">
      <div>
        <%= image_tag('image-svgrepo-com.svg') %>
        Ảnh/video
      </div>
    </div>
    <div class="item">
